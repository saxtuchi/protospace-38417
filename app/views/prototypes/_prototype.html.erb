<div class="card">
  <%= link_to image_tag(prototype.image, class: :card__img ), prototype_path(prototype.id) %>
  <%#= link_to image_tag("プロトタイプの画像", class: :card__img ), root_path prototype_path(prototype.id), method: :get %>
  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype.id), class: :card__title%>
    <%#= link_to "プロトタイプのタイトル", root_path, class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
      <%#= "プロトタイプのキャッチコピー" %>
    </p>
    <%= link_to "by #{prototype.user.name}", "/users/#{prototype.user.id}", class: :card__user %>
    <%#= link_to "by プロトタイプの投稿者名", root_path, class: :card__user %>
  </div>
</div>